@page
@using DotnetMonitorConfiguration.Models
@using DotnetMonitorConfiguration.Models.Collection_Rules.Trigger_Types
@model TriggerSelectionModel

<form method="post">
    <div class="row-narrow">
        <div class="label">Trigger Selection</div>
        <a href="https://github.com/dotnet/dotnet-monitor/blob/main/documentation/configuration.md#triggers" target="_blank" class="sub-label">Learn More</a>

        <fieldset>
            @foreach(var triggerType in General._triggerTypes)
            {
                string className = (triggerType.Equals(TriggerSelectionModel.GetExistingTriggerTypeName())) ? "submit-button-highlighted" : "submit-button";
                <button class=@className type="submit" asp-route-data=@triggerType asp-page-handler="TriggerType">@triggerType</button>
            }
        </fieldset>
    </div>
</form>