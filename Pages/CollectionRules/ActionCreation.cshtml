@page
@using DotnetMonitorConfiguration.Models
@model ActionCreationModel

<form method="post">
    <fieldset>
        <div class="text-center">
            <button class="button" type="submit" asp-route-data="Submit" asp-page-handler="Way2" id="submitButton">New Action</button>
            <button class="button" type="submit" asp-route-data="Submit" asp-page-handler="Way3" id="submitButton">Done Adding Actions</button>
        </div>
    </fieldset>

    <div class="row-narrow">

        <div class="label">Actions</div>
    
        @{
              int index = 0;
        }

        @foreach(var crAction in General._collectionRules[ActionCreationModel.collectionRuleIndex]._actions)
        {
            <button class="submit-button" type="submit" asp-route-data=@index.ToString() asp-page-handler="Way4" id="submitButton">@crAction.GetType().Name</button>
            ++index;
        }
    </div>
</form>

