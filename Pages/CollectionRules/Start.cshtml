@page
@using DotnetMonitorConfiguration.Models
@model StartModel

<form method="post">
    <fieldset>
        <div class="text-center">
            <button class="submit-button" type="submit" asp-route-data="Submit" asp-page-handler="Way2" id="submitButton">New Collection Rule</button>
        </div>
    </fieldset>
</form>


<div class="row-narrow">
    <form method="post">
        @{
            int index = 0;
        }

        <div class="label">Collection Rules</div>

        @foreach(var collectionRule in General._collectionRules)
        {
            <div class="column-ultra-wide">
                    <button class="button" type="submit" asp-route-data=@index.ToString() asp-page-handler="Way3" id="submitButton">@collectionRule.Name</button>
            </div>

            <div class="column-ultra-narrow">
                    <button class="delete-button" type="submit" asp-route-data=@index.ToString() asp-page-handler="Delete" id="submitButton">X</button>
            </div>

            ++index;
        }
    </form>
 </div>

 <br />

 <div class = "row-narrow">

    <div class="label">JSON Output</div>

    <div class="column"><pre><code>@StartModel.GenerateJSON2()</code></pre></div>
</div>
