@page
@using DotnetMonitorConfiguration.Models
@model FilterCreationModel

<form method="post">
    <fieldset>
        <div class="text-center">
            <button class="submit-button" type="submit" asp-route-data="Submit" asp-page-handler="Way2" id="submitButton">New Filter</button>
            <button class="submit-button" type="submit" asp-route-data="Submit" asp-page-handler="Way3" id="submitButton">Done Adding Filters</button>
        </div>
    </fieldset>

    <div class="row-narrow">

        <div class="label">Filters</div>
    
        @{
              int index = 0;
        }

        @foreach(var crFilter in General._collectionRules[FilterCreationModel.collectionRuleIndex]._filters)
        {
            <div class="column-ultra-wide">
                 <button class="button" type="submit" asp-route-data=@index.ToString() asp-page-handler="FilterSelect" id="submitButton">@crFilter.Key</button>
            </div>

            <div class="column-ultra-narrow">
                 <button class="delete-button" type="submit" asp-route-data=@index.ToString() asp-page-handler="Delete" id="submitButton">X</button>
            </div>

            ++index;
        }
    </div>
</form>
